<!doctype html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>

    <% include partials/header.ejs %>

    <div id="hero-image-single" style="background-image: url('/images/<%= book.hero_image %>')">
      <h1 id="hero-title"><%= book.title %></h1>
    </div>

    <div class="content-padding clearfix">
      <div class="poster-wrapper">
        <img src="/images/<%= book.poster %>" class="img-responsive">
      </div>
      <div class="description-wrapper">
        <div class="description">
          <h2 class="book-header">Description</h2>
          <p><%= book.description %></p>
        </div>
        <div class="main-characters">
          <h2 class="movie-header">Main Characters</h2>
          <ul>
            <% for (var i=0; i< book.main_characters.length;i++){ %>
              <li><%= book.main_characters[i] %></li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
  </body>
</html>
